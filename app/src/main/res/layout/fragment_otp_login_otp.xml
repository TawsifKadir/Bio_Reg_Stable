<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="?attr/colorBackground"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="14dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="3dp">


            <EditText
                android:id="@+id/etOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:hint="@string/otp_enter_valid"
                android:inputType="number"
                android:maxLength="6"
                android:padding="12dp"
                android:textColor="@color/contrast_dark"
                tools:text="4444" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvWrongNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/red"
            android:gravity="right"
            android:text="@string/phone_no_invaild"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btSubmitOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/submit"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btOtpResend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/otp_resend"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textSize="18sp" />


        <!--        <include-->
        <!--            layout="@layout/layout_terms_of_use"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_marginTop="30dp"-->
        <!--            android:layout_marginBottom="20dp" />-->


    </LinearLayout>

</ScrollView>
