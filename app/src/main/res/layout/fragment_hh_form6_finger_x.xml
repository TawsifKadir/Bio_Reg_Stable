<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <TextView
        android:id="@+id/tvPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="8dp"
        android:text="Page - (6/6)"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/llBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPage">

        <LinearLayout
            android:id="@+id/llCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/ic_finger"
                app:tint="@color/gray" />
            <TextView
                android:id="@+id/txt"
                android:textAlignment="center"
                android:text="Add Fingerprints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:id="@+id/llDataShow"
                tools:visibility="visible"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            android:id="@+id/imgRT"
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="@string/right_thumb"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            android:id="@+id/imgRI"
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="@string/right_index"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            android:id="@+id/imgRM"
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="@string/right_middle"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            android:id="@+id/imgRR"
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="@string/right_ring"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            android:id="@+id/imgRL"
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="@string/right_little"></TextView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            android:id="@+id/imgLT"
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="@string/left_thumb"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            android:id="@+id/imgLI"
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="@string/left_index"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            android:id="@+id/imgLM"
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="@string/left_middle"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            android:id="@+id/imgLR"
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="@string/left_ring"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            android:id="@+id/imgLL"
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="@string/left_little"></TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_height="wrap_content">

        <include
            android:id="@+id/view_button_back_next"
            layout="@layout/view_button_back_next" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
