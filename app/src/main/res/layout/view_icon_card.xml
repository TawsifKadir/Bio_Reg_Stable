<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackgroundSecondary"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/ccr_default"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/grid_cell_icon_size"
            android:layout_height="@dimen/grid_cell_icon_size"
            android:tint="?attr/colorOnGrid"
            tools:src="@drawable/ic_households" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="?attr/colorOnGrid"
            android:textSize="@dimen/grid_cell_text_size"
            android:textStyle="bold"
            tools:text="Households" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
