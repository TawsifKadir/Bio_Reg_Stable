<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="?attr/colorBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/phone_number_enter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ccpDialog_backgroundColor="?attr/colorBackground"
            app:ccpDialog_textColor="?attr/colorTextPrimary"
            app:ccp_contentColor="?attr/colorTextPrimary"
            app:ccp_countryPreference="BD,US,SA,IN"
            app:ccp_defaultNameCode="BD"
            app:ccp_showFlag="true"
            app:ccp_showFullName="false"
            app:ccp_showNameCode="false" />


        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:hint="@string/phone_number_enter"
            android:inputType="number"
            android:maxLength="12"
            android:maxLines="1"
            android:padding="12dp" />

    </LinearLayout>


    <Button
        android:id="@+id/btOtpSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimary"
        android:padding="16dp"
        android:text="@string/otp_send"
        android:textAllCaps="true"
        android:textColor="@color/white" />


    <!--        <include-->
    <!--            layout="@layout/layout_terms_of_use"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_gravity="center"-->
    <!--            android:layout_marginTop="30dp"-->
    <!--            android:layout_marginBottom="20dp" />-->


</LinearLayout>


