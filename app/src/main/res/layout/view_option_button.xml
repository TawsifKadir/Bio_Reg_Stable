<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/btDelete"
            style="@style/AppImageButton.Medium"
            android:layout_marginEnd="16dp"
            android:src="@drawable/delete_24px" />

        <ImageButton
            android:id="@+id/btSend"
            style="@style/AppImageButton.Medium"
            android:layout_marginEnd="16dp"
            android:src="@drawable/send_24px" />


        <ImageButton
            android:id="@+id/btSendWithRandomId"
            style="@style/AppImageButton.Medium"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_send_time_extension_24"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btPreview"
            style="@style/AppImageButton.Medium"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_preview_24"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btSaveLocally"
            style="@style/AppImageButton.Medium"
            android:layout_marginEnd="16dp"
            android:src="@drawable/save_24px"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>